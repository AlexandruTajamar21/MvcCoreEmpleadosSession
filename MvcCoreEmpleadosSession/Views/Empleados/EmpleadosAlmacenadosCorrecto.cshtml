@model IEnumerable<MvcCoreEmpleadosSession.Models.Empleado>

@{
    ViewData["Title"] = "EmpleadosAlmacenadosCorrecto";
}

<h1>EmpleadosAlmacenadosCorrecto</h1>

<a asp-controller="Empleados" asp-action="SessionEmpleadosCorrecto">Volver Almacenar Empleados</a>

<p>
    @ViewData["MENSAJE"]
</p>

@if (Model != null)
{
    <table class="table table-dark">
        <thead>
            <tr>
                <th>
                    Apellido
                </th>
                <th>
                    Oficio
                </th>
                <th>
                    Salario
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Apellido)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Oficio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Salario)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

